        <xs:annotation>
            <xs:documentation>
                Only on .cyk service page module, in the parameters of [get] function. 
            </xs:documentation>
        </xs:annotation>
        <xs:attribute name="name"/>
    </xs:complexType>

    <xs:complexType name="responseObject">
        <xs:annotation>
            <xs:documentation>
                Only on .cyk service page module, in the parameters of [get] function.
            </xs:documentation>
        </xs:annotation>
        <xs:attribute name="name"/>
    </xs:complexType>

